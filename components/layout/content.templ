package layout

import (
	"github.com/sebwib/emma-site-htmx/components/partial"
	"github.com/sebwib/emma-site-htmx/db"
)

templ Content(routes []partial.Route, db *db.DB, currentPath string, children ...templ.Component) {
	@partial.Header(routes, currentPath)
	<!-- Dynamic Content Area - gets swapped by HTMX -->
	<main class="flex flex-col flex-1">
		for _, child := range children {
			@child
		}
	</main>
}
